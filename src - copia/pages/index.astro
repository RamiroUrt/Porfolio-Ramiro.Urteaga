import Badge from '../components/Badge.astro';
import Layout from '../layouts/Layout.astro';
import Languaje from '../components/Languaje.astro'
import Frameworks from '../components/Frameworks.astro'

---
<Layout 
	title="Portfolio Ramiro Urteaga Desarrolador y Programador Web"
	description='Junior con ganas de aprender'
	>
		<main class="my-5 text-xl p-[3rem]">
			<div class="flex flex-colum aling-center text-center m-[1rem] " id="Inicio">
